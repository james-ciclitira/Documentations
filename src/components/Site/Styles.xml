<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/tt_norms_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/tt_norms_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="Subheading">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/tt_norms_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="Subheading2">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/tt_norms_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/tt_norms_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/tt_norms_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/tt_norms_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/tt_norms_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>
